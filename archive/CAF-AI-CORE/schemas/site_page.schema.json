{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CAF-AI Site Pages Format",
  "type": "object",
  "required": ["description", "base_url", "topic", "region", "brand", "pages"],
  "properties": {
    "description": {
      "type": "string",
      "description": "Short description of what this file contains"
    },
    "base_url": {
      "type": "string",
      "format": "uri",
      "description": "The root domain scraped from"
    },
    "topic": {
      "type": "string",
      "description": "Tax topic, e.g. 'imu', 'f24'"
    },
    "region": {
      "type": "string",
      "description": "Geographic region, e.g. 'torino'"
    },
    "brand": {
      "type": "string",
      "description": "System that uses this knowledge, e.g. 'CAF'"
    },
    "total_pages": {
      "type": "integer",
      "description": "Optional count of how many pages were scraped"
    },
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["url", "title", "text", "retrieved_at"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": "string"
          },
          "text": {
            "type": "string",
            "minLength": 20
          },
          "retrieved_at": {
            "type": "string",
            "format": "date",
            "description": "ISO 8601 date string, e.g. '2024-02-23'"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
